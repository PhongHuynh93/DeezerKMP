<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="300"
        app:motionInterpolator="easeOut">

        <OnSwipe
            app:dragDirection="dragUp"
            app:maxAcceleration="250"
            app:touchAnchorId="@+id/player_background_view"
            app:touchAnchorSide="top" />
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="10"
                app:motionTarget="@+id/miniPlayerContainer" />
            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="100"
                app:motionTarget="@+id/miniPlayerContainer" />

        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="10"
                app:motionTarget="@+id/playerContainer" />
            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="20"
                app:motionTarget="@+id/playerContainer" />
            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@+id/playerContainer" />
            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="0"
                app:motionTarget="@+id/playerContainer" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/player_background_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_mini_player"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@id/player_background_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>
